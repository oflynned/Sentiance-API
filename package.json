  "private": true,
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rimraf ./dist",
    "db:migrate": "echo \"todo\"",
    "db:migration:create": "echo \"todo\"",
    "lint:code": "prettier --write '**/*.ts' --config ./.prettierrc",
